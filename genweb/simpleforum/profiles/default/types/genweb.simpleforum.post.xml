<?xml version="1.0"?>
<object name="genweb.simpleforum.post" meta_type="Dexterity FTI"
        i18n:domain="genweb.simpleforum"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n">
    
    <property name="title" i18n:translate="">Post</property>
    <property name="icon_expr"></property>
    <property name="factory">genweb.simpleforum.post</property>
    <property name="add_view_expr">string:${folder_url}/++add++genweb.simpleforum.post</property>
    <property name="link_target"></property>
    <property name="immediate_view">view</property>
    <property name="global_allow">False</property>
    <property name="filter_content_types">True</property>
    <property name="allow_discussion">True</property>
    <property name="default_view_fallback">False</property>
    <property name="add_permission">cmf.AddPortalContent</property>
    <property name="schema">genweb.simpleforum.content.post.IPost</property>
    <property name="model_file"></property>
    <property name="schema_policy">dexterity</property>

    <property name="behaviors">
        <element value="plone.app.content.interfaces.INameFromTitle"/>
        <element value="Products.CMFPlone.interfaces.constrains.ISelectableConstrainTypes"/>
        <element value="plone.app.multilingual.dx.interfaces.IDexterityTranslatable"/>
        <element value="collective.dexteritytextindexer.behavior.IDexterityTextIndexer" />  
        <element value="plone.app.referenceablebehavior.referenceable.IReferenceable" />  
    </property>
    
    <property
        name="model_source">&lt;model xmlns="http://namespaces.plone.org/supermodel/schema"&gt;
        &lt;schema /&gt;
        &lt;/model&gt;
    </property>
    
    <alias from="(Default)" to="(dynamic view)"/>
    <alias from="edit" to="@@edit"/>
    <alias from="sharing" to="@@sharing"/>
    <alias from="view" to="(selected layout)"/>
    <action title="View" action_id="view" category="object" condition_expr=""
            description="" icon_expr="" link_target="" url_expr="string:${object_url}"
            visible="True">
        <permission value="View"/>
    </action>
    <action title="Edit" action_id="edit" category="object" condition_expr=""
            description="" icon_expr="" link_target=""
            url_expr="string:${object_url}/edit" visible="True">
            <permission value="Modify portal content"/>
    </action>
</object>
